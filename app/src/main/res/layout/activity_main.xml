                <Button
                    android:id="@+id/btnBankP4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="bank4"
                    android:text="Bank!" />

            </TableRow>

            <TableRow
                android:id="@+id/row5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:background="@android:color/black"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/totalPlayer5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@color/colorAccent"
                    android:padding="@dimen/padding"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/inputPlayer5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@color/colorPrimary"
                    android:hint="Player 5"
                    android:inputType="textCapWords"
                    android:padding="@dimen/padding"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/toggleButton5"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:textOff=":("
                    android:textOn=":)" />

                <Button
                    android:id="@+id/button50_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="add5Score50"
                    android:text="+50" />

                <Button
                    android:id="@+id/button100_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="add5Score100"
                    android:text="+100" />

                <Button
                    android:id="@+id/button1000_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="add5Score1000"
                    android:text="+1000" />

                <TextView
                    android:id="@+id/score5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
