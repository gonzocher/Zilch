                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/toggleButton2"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:textOff=":("
                    android:textOn=":)" />

                <Button
                    android:id="@+id/button50_2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:onClick="add2Score50"
                    android:text="+50" />

                <Button
                    android:id="@+id/button100_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="add2Score100"
                    android:text="+100" />

                <Button
                    android:id="@+id/button1000_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="add2Score1000"
                    android:text="+1000" />

                <TextView
                    android:id="@+id/score2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryLight"
                    android:padding="@dimen/padding"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnBankP2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="bank2"
                    android:text="Bank!" />

            </TableRow>

            <TableRow
                android:id="@+id/row3"
                android:layout_width="match_parent"
